@model UserModel
@{
	ViewData["Title"] = "Change Password";
	var name = ViewBag.Name;
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Change Password</h2>
					<form asp-route-name="@name" asp-action="ChangePassword" asp-controller="Account">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>News Password</label>
							<input asp-for="Password" name="newPass" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						 <div class="form-group">
							<label>Confirm Password</label>
							<input asp-for="Password" name="confirmPass" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<button class="btn btn-default">Submit</button>
						<a asp-action="Index" asp-controller="Home">Back To Home</a>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
