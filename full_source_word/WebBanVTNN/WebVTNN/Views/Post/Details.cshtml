@{
    var postList = ViewBag.postViewBag as List<PostModel>;
}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div>Tác giả: @Model.UserID</div>
            <div>Ngày đăng: @Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
            <h2>@Model.Title</h2>
            <div>@Html.Raw(Model.Content)</div>
        </div>
        <div class="col-md-3">
            <h2><p>Danh sách bài viết liên quan</p></h2>
            @foreach (var post in postList)
            {
                <a class="styled-box col-md-3" asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">@post.Title</a>
            }
        </div>
    </div>
</div>

<style>
    .styled-box {
        width: 100%;
        height: 100px;
        background: linear-gradient(to right, #249AD0, #7235C9);
        color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        text-align: center;
        padding: 20px;
        margin: 20px auto;
        transition: background-color 0.3s ease-in-out;
    }

        .styled-box:hover {
            background: linear-gradient(to right, #7235C9, #249AD0);
            color: orange;
        }

        .styled-box h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .styled-box p {
            font-size: 16px;
        }
</style>