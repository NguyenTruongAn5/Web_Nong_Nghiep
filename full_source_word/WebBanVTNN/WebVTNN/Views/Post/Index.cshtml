@model X.PagedList.IPagedList<PostModel>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "List of Posts";
}
<div class="container">
    <h2>Đanh sách các bài viết</h2>
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-4">
                <div class="styled-box">
                    <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">@post.Title</a>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.PagedListPager(Model, page=>Url.ActionLink("Index", "Post", new{page = page}))
</div>
<style>
    .styled-box {
        width: 100%;
        height: 100px;
        background: linear-gradient(to right, #87CEEB, #B0E0E6);
        color: black;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        text-align: center;
        padding: 20px;
        margin: 20px auto;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .styled-box:hover {
            background: linear-gradient(to right, #87CEEB, #B0E0E6);
            color: white;
        }

        .styled-box h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .styled-box p {
            font-size: 16px;
        }
</style>
