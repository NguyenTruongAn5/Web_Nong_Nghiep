    <style>
        #gmap {
            width: 100%;
            height: 400px;
        }
    </style>
    <script>
        function initMap() {
            var myLatLng = { lat: 10 + (25 / 60), lng: 105 + (38 / 60) };

            var map = new google.maps.Map(document.getElementById('gmap'), {
                center: myLatLng, 
                zoom: 15 
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Đây là địa chỉ công ty!'
            });
        }
    </script>
