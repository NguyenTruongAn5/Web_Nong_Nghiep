@model List<OrderDetails>

@{
    ViewData["Title"] = "Dashboard";
    var quantityTog = ViewBag.quantityTog;
    var priceTog = ViewBag.priceTog;
    var commentTog = ViewBag.commentTog;
    var month = ViewBag.commentCountsByMonth;
    var order = ViewBag.orderCountsByMonth;
    var listCount = new int[12]; 
    var listCountOrder = new int[12];
}
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="styled-box">
                <i class="fas fa-shopping-cart box-icon"></i>
                <h2>Total products sold</h2>
                <p>@quantityTog Products</p>
            </div>
        </div>

        @foreach (var item in month)
        {
            var index = item.MonthYear.Month - 1;
            listCount[index] = item.Count;
        }
        @foreach (var item in order)
        {
            var index = item.MonthYear.Month - 1;
            listCountOrder[index] = item.Count;
        }

        <div class="col-sm-4">
            <div class="styled-box">
                <i class="fas fa-dollar-sign box-icon"></i>
                <h2>Total revenue</h2>
                <p>$@priceTog</p>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="styled-box">
                <i class="fas fa-comments box-icon"></i>
                <h2>Total comment</h2>
                <p>@commentTog comments</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <canvas id="barChart"></canvas>
        </div>

        <div class="col-md-6">
            <canvas id="lineChart"></canvas>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .styled-box {
        width: 100%;
        height: 200px;
        background: linear-gradient(to right, #249AD0, #7235C9);
        color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        text-align: center;
        padding: 20px;
        margin: 20px auto;
        transition: background-color 0.3s ease-in-out;
    }

        .styled-box:hover {
            background: linear-gradient(to right, #7235C9, #249AD0);
        }

        .styled-box h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .styled-box p {
            font-size: 16px;
        }

    .box-icon {
        font-size: 36px;
        margin-bottom: 10px;
    }

</style>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script>
        var listCount = @Html.Raw(Json.Serialize(listCount));
        var listCountOrder = @Html.Raw(Json.Serialize(listCountOrder));

        var lineChartData = {
            labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
            datasets: [{
                label: 'Number of Comments',
                fill: false,
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2,
                data: listCount 
            }]
        };

        var barChartData = {
            labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
            datasets: [{
                label: 'Revenue',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1,
                data: listCountOrder,
            }]
        };

        var lineChart = new Chart(document.getElementById('lineChart'), {
            type: 'line',
            data: lineChartData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var barChart = new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: barChartData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}