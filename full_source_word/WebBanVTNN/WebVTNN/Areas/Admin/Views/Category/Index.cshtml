@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Title";
}
<a class="btn btn-success btn-sm" asp-controller="Category" asp-action="Add">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Slug</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Edit</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Slug</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                     </td>
                    <td>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>